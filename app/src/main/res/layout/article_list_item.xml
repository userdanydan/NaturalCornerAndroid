<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:clickable="true"
    android:longClickable="true"
    android:background="@android:drawable/list_selector_background">
    <ListView
        android:id="@+id/list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/album_list_item_tv_denomination"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/album_list_item_tv_commentaire"
        android:layout_below="@+id/album_list_item_tv_prix_unitaire"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/album_list_item_tv_prix_unitaire"
        android:layout_below="@+id/album_list_item_tv_denomination"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/album_list_item_tv_id"
        android:visibility="gone"/>
</RelativeLayout>